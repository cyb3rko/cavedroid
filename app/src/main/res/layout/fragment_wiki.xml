            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/titles_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/minigames_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/king_of_the_ladder_button"
            style="@style/Wiki.ListButton"
