            app:layout_constraintTop_toBottomOf="@id/pocket_mob_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/slime_chunk_detector_button"
            style="@style/Wiki.ListButton"
            android:tag="slime_chunk_detector"
            android:text="Slime Chunk Detector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/landmarks_button"
            app:layout_constraintTop_toTopOf="@id/landmarks_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/market_button"
            style="@style/Wiki.ListButton"
            android:tag="market"
