            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/survival_games_map_making_button"
            app:layout_constraintTop_toTopOf="@id/survival_games_map_making_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/vertigo_map_making_button"
            style="@style/Wiki.ListButton"
            android:tag="vertigo_map_making"
