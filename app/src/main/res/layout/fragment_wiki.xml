            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/titles_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/general_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/titles_button"
            style="@style/Wiki.ListButton"
            android:tag="titles"
            android:text="Titles \u2197"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rules_button"
            app:layout_constraintTop_toTopOf="@id/rules_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ranks_staff_button"
            style="@style/Wiki.ListButton"
            android:tag="ranks_staff"
            android:text="Ranks &amp; Staff \u2197"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/staff_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rules_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/staff_button"
            style="@style/Wiki.ListButton"
            android:tag="staff"
            android:text="Staff \u2197"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ranks_staff_button"
            app:layout_constraintTop_toTopOf="@id/ranks_staff_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat_button"
            style="@style/Wiki.ListButton"
            android:tag="chat"
            android:text="Chat"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/home_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ranks_staff_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_button"
            style="@style/Wiki.ListButton"
            android:tag="home"
            android:text="Home"
            app:layout_constraintEnd_toEndOf="parent"
