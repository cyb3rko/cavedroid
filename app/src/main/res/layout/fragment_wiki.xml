            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toStartOf="@+id/building_on_creative_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/survival_games_map_making_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/building_on_creative_button"
            style="@style/Wiki.ListButton"
